{
  "name": "unbundle-demo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "app",
    "programs/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=app",
    "build": "npm run build --workspace=app",
    "start": "npm run start --workspace=app",
    "build:anchor": "anchor build",
    "test": "anchor test --skip-local-validator",
    "deploy": "anchor deploy",
    "lint": "eslint . --ext .ts,.tsx",
    "create-mints": "tsx scripts/create_mints.ts",
    "init-faucet": "tsx scripts/initialize_faucet.ts",
    "init-split": "tsx scripts/initialize_split.ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@solana/spl-token": "^0.3.9",
    "@solana/web3.js": "^1.87.6",
    "bs58": "^5.0.0",
    "clsx": "^2.1.1",
    "posthog-js": "^1.284.0",
    "tailwind-merge": "^3.3.1"
  },
  "overrides": {
    "@sinclair/typebox": "0.31.28"
  }
}